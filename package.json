{
	"name": "ezal-markdown",
	"version": "0.2.0",
	"description": "A simple, asynchronous markdown renderer",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"preinstall": "npx -y only-allow pnpm",
		"test": "vitest",
		"test:ci": "vitest run",
		"build": "rolldown -c",
		"clean": "rimraf dist",
		"postpublish": "pnpm clean && pnpm build"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/JonnyJong/ezal-markdown.git"
	},
	"keywords": ["markdown", "ezal"],
	"author": "jonnyjonny",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/JonnyJong/ezal-markdown/issues"
	},
	"homepage": "https://github.com/JonnyJong/ezal-markdown#readme",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@vitest/coverage-v8": "^3.2.4",
		"rimraf": "^6.0.1",
		"rolldown": "1.0.0-beta.28",
		"rolldown-plugin-dts": "^0.14.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"yaml": "^2.8.0"
	},
	"peerDependenciesMeta": {
		"yaml": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	}
}
